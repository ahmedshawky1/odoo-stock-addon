<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_stock_matching_engine" model="ir.cron">
            <field name="name">Stock Matching Engine (Every Minute)</field>
            <field name="model_id" ref="stock_market_simulation.model_stock_matching_engine"/>
            <field name="state">code</field>
            <field name="code">env['stock.matching.engine'].cron_run_matching()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>