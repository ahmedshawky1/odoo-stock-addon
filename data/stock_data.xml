<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- System Configuration Parameters -->
        <record id="config_auto_create_next_session" model="ir.config_parameter">
            <field name="key">stock_market.auto_create_next_session</field>
            <field name="value">True</field>
        </record>
        
        <!-- Initial Trading Session (Session 01) -->
        <record id="initial_session" model="stock.session">
            <field name="name">Session 01</field>
            <field name="state">draft</field>
            <field name="price_change_threshold">10.0</field>
            <field name="broker_commission_rate">0.25</field>
            <field name="tick_size">0.01</field>
            <field name="circuit_breaker_upper">15.0</field>
            <field name="circuit_breaker_lower">15.0</field>
        </record>
        
        <!-- Cron job for auto open/close sessions -->
        <record id="ir_cron_check_session_times" model="ir.cron">
            <field name="name">Stock Market: Check Session Times</field>
            <field name="model_id" ref="model_stock_session"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_session_times()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Cron job for checking matured deposits -->
        <record id="ir_cron_check_matured_deposits" model="ir.cron">
            <field name="name">Stock Market: Check Matured Deposits</field>
            <field name="model_id" ref="model_stock_deposit"/>
            <field name="state">code</field>
            <field name="code">model.check_matured_deposits()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Cron job for checking overdue loans -->
        <record id="ir_cron_check_overdue_loans" model="ir.cron">
            <field name="name">Stock Market: Check Overdue Loans</field>
            <field name="model_id" ref="model_stock_loan"/>
            <field name="state">code</field>
            <field name="code">model.check_overdue_loans()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Cron job for expiring orders -->
        <record id="ir_cron_expire_orders" model="ir.cron">
            <field name="name">Stock Market: Expire Orders</field>
            <field name="model_id" ref="model_stock_order"/>
            <field name="state">code</field>
            <field name="code">model.expire_orders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo> 