<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Loan Form View -->
    <record id="view_stock_loan_form" model="ir.ui.view">
        <field name="name">stock.loan.form</field>
        <field name="model">stock.loan</field>
        <field name="arch" type="xml">
            <form string="Bank Loan">
                <header>
                    <button name="action_approve" type="object" string="Approve Loan" 
                            invisible="state != 'draft'" class="btn-primary" groups="stock.group_stock_banker"/>
                    <button name="action_disburse" type="object" string="Disburse Loan" 
                            invisible="state != 'approved'" class="btn-success" groups="stock.group_stock_banker"/>
                    <button name="action_make_payment" type="object" string="Make Payment" 
                            invisible="state != 'active'" class="btn-info"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,approved,active,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid" bg_color="bg-success" attrs="{'invisible': [('status', '!=', 'paid')]}"/>
                    <widget name="web_ribbon" title="Defaulted" bg_color="bg-danger" attrs="{'invisible': [('status', '!=', 'defaulted')]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Loan Details">
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="banker_id" options="{'no_create': True}"/>
                            <field name="loan_type"/>
                            <field name="amount" widget="monetary"/>
                            <field name="interest_rate" widget="percentage"/>
                            <field name="term_months"/>
                            <field name="emi_amount" widget="monetary"/>
                        </group>
                        <group string="Dates">
                            <field name="disbursement_date"/>
                            <field name="maturity_date"/>
                            <field name="next_payment_date" attrs="{'invisible': [('status', '!=', 'active')]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('loan_type', 'not in', ['margin', 'secured'])]}">
                        <group string="Collateral">
                            <field name="collateral_security_id" options="{'no_create': True}"/>
                            <field name="collateral_quantity"/>
                            <field name="collateral_value" widget="monetary"/>
                            <field name="ltv_ratio" widget="percentage"/>
                            <field name="margin_call_price" attrs="{'invisible': [('loan_type', '!=', 'margin')]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Outstanding">
                            <field name="principal_outstanding" widget="monetary"/>
                            <field name="interest_accrued" widget="monetary"/>
                            <field name="total_outstanding" widget="monetary"/>
                        </group>
                        <group string="Payments">
                            <field name="total_paid" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payments" name="payments">
                            <field name="payment_ids" readonly="1">
                                <tree>
                                    <field name="payment_date"/>
                                    <field name="payment_type"/>
                                    <field name="amount" widget="monetary" sum="Total Paid"/>
                                    <field name="principal_component" widget="monetary" sum="Total Principal"/>
                                    <field name="interest_component" widget="monetary" sum="Total Interest"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Loan Tree View -->
    <record id="view_stock_loan_tree" model="ir.ui.view">
        <field name="name">stock.loan.tree</field>
        <field name="model">stock.loan</field>
        <field name="arch" type="xml">
            <list string="Loans" decoration-success="status == 'paid'" decoration-danger="status == 'defaulted'" decoration-warning="next_payment_date &lt; current_date">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <field name="loan_type"/>
                <field name="amount" widget="monetary"/>
                <field name="interest_rate" widget="percentage"/>
                <field name="principal_outstanding" widget="monetary"/>
                <field name="total_outstanding" widget="monetary"/>
                <field name="next_payment_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    
    <!-- Loan Kanban View -->
    <record id="view_stock_loan_kanban" model="ir.ui.view">
        <field name="name">stock.loan.kanban</field>
        <field name="model">stock.loan</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <field name="amount"/>
                <field name="total_outstanding"/>
                <field name="status"/>
                <field name="loan_type"/>
                <progressbar field="status" colors='{"active": "warning", "paid": "success", "defaulted": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="user_id"/> ‚Üê <field name="banker_id"/>
                                </div>
                                <div class="mt-2">
                                    <span class="badge badge-secondary">
                                        <field name="loan_type"/>
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <strong>Loan Amount: </strong>
                                    <field name="amount" widget="monetary"/>
                                </div>
                                <div>
                                    <strong>Outstanding: </strong>
                                    <field name="total_outstanding" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Loan Search View -->
    <record id="view_stock_loan_search" model="ir.ui.view">
        <field name="name">stock.loan.search</field>
        <field name="model">stock.loan</field>
        <field name="arch" type="xml">
            <search string="Loans">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <filter string="My Loans" name="filter_my_loans" domain="[('user_id', '=', uid)]"/>
                <filter string="My Bank Loans" name="filter_my_bank" domain="[('banker_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Approved" name="filter_approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Active" name="filter_active" domain="[('status', '=', 'active')]"/>
                <filter string="Paid" name="filter_paid" domain="[('status', '=', 'paid')]"/>
                <filter string="Defaulted" name="filter_defaulted" domain="[('status', '=', 'defaulted')]"/>
                <separator/>
                <filter string="Payment Overdue" name="filter_overdue" domain="[('next_payment_date', '&lt;', current_date), ('status', '=', 'active')]"/>
                <group expand="0" string="Group By">
                    <filter string="Borrower" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Bank" name="group_by_banker" context="{'group_by': 'banker_id'}"/>
                    <filter string="Type" name="group_by_type" context="{'group_by': 'loan_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Loan Action -->
    <record id="action_stock_loan" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">stock.loan</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new loan
            </p>
            <p>
                Loans allow investors to borrow funds from banks for trading or other purposes.
            </p>
        </field>
    </record>
    
</odoo> 