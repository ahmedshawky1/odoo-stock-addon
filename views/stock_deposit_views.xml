<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Deposit Form View -->
    <record id="view_stock_deposit_form" model="ir.ui.view">
        <field name="name">stock.deposit.form</field>
        <field name="model">stock.deposit</field>
        <field name="arch" type="xml">
            <form string="Bank Deposit">
                <header>
                    <button name="action_confirm" type="object" string="Confirm Deposit" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_withdraw" type="object" string="Withdraw" 
                            invisible="(state != 'active') and (state != 'matured')" class="btn-warning" confirm="Are you sure you want to withdraw this deposit?"/>
                    <button name="action_mature" type="object" string="Mark as Matured" 
                            invisible="state != 'active'" class="btn-info" attrs="{'invisible': [('days_to_maturity', '>', 0)]}"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state != 'draft'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,matured,withdrawn"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Matured" bg_color="bg-success" attrs="{'invisible': [('status', '!=', 'matured')]}"/>
                    <widget name="web_ribbon" title="Withdrawn" bg_color="bg-info" attrs="{'invisible': [('status', '!=', 'withdrawn')]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Deposit Details">
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="banker_id" options="{'no_create': True}"/>
                            <field name="deposit_type"/>
                            <field name="amount" widget="monetary"/>
                            <field name="interest_rate" widget="percentage"/>
                            <field name="term_months"/>
                        </group>
                        <group string="Dates">
                            <field name="deposit_date"/>
                            <field name="maturity_date"/>
                            <field name="days_to_maturity" attrs="{'invisible': [('status', '!=', 'active')]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Current Value">
                            <field name="accrued_interest" widget="monetary"/>
                            <field name="current_value" widget="monetary"/>
                            <field name="maturity_amount" widget="monetary"/>
                        </group>
                        <group string="Withdrawal">
                            <field name="early_withdrawal_penalty" widget="percentage" attrs="{'invisible': [('status', 'in', ['withdrawn', 'cancelled'])]}"/>
                            <field name="withdrawal_date" attrs="{'invisible': [('status', '!=', 'withdrawn')]}"/>
                            <field name="withdrawal_amount" widget="monetary" attrs="{'invisible': [('status', '!=', 'withdrawn')]}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Deposit Tree View -->
    <record id="view_stock_deposit_tree" model="ir.ui.view">
        <field name="name">stock.deposit.tree</field>
        <field name="model">stock.deposit</field>
        <field name="arch" type="xml">
            <list string="Deposits" decoration-success="status == 'matured'" decoration-info="status == 'active'">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <field name="deposit_type"/>
                <field name="amount" widget="monetary"/>
                <field name="interest_rate" widget="percentage"/>
                <field name="current_value" widget="monetary"/>
                <field name="deposit_date"/>
                <field name="maturity_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    
    <!-- Deposit Kanban View -->
    <record id="view_stock_deposit_kanban" model="ir.ui.view">
        <field name="name">stock.deposit.kanban</field>
        <field name="model">stock.deposit</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <field name="amount"/>
                <field name="current_value"/>
                <field name="status"/>
                <field name="deposit_type"/>
                <progressbar field="status" colors='{"active": "info", "matured": "success", "withdrawn": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="user_id"/> â†’ <field name="banker_id"/>
                                </div>
                                <div class="mt-2">
                                    <span class="badge badge-secondary">
                                        <field name="deposit_type"/>
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <strong>Principal: </strong>
                                    <field name="amount" widget="monetary"/>
                                </div>
                                <div>
                                    <strong>Current Value: </strong>
                                    <field name="current_value" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Deposit Search View -->
    <record id="view_stock_deposit_search" model="ir.ui.view">
        <field name="name">stock.deposit.search</field>
        <field name="model">stock.deposit</field>
        <field name="arch" type="xml">
            <search string="Deposits">
                <field name="name"/>
                <field name="user_id"/>
                <field name="banker_id"/>
                <filter string="My Deposits" name="filter_my_deposits" domain="[('user_id', '=', uid)]"/>
                <filter string="My Bank" name="filter_my_bank" domain="[('banker_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Active" name="filter_active" domain="[('status', '=', 'active')]"/>
                <filter string="Matured" name="filter_matured" domain="[('status', '=', 'matured')]"/>
                <filter string="Withdrawn" name="filter_withdrawn" domain="[('status', '=', 'withdrawn')]"/>
                <separator/>
                <filter string="Maturing Soon" name="filter_maturing_soon" domain="[('days_to_maturity', '&lt;=', 30), ('status', '=', 'active')]"/>
                <group expand="0" string="Group By">
                    <filter string="Depositor" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Bank" name="group_by_banker" context="{'group_by': 'banker_id'}"/>
                    <filter string="Type" name="group_by_type" context="{'group_by': 'deposit_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Deposit Action -->
    <record id="action_stock_deposit" model="ir.actions.act_window">
        <field name="name">Deposits</field>
        <field name="res_model">stock.deposit</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new deposit
            </p>
            <p>
                Deposits allow investors to earn interest on their idle funds by placing them with banks.
            </p>
        </field>
    </record>
    
</odoo> 