            <field name="name">Government Treasury Bond</field>
            <field name="sector">Government</field>
            <field name="bond_type">government</field>
            <field name="rate_type">fixed_coupon</field>
            <field name="status">trade</field>
            <field name="ipo_price">1000</field>
            <field name="current_price">1020</field>
            <field name="quantity">10000</field>
            <field name="compensation_rate">3.5</field>
            <field name="start_session">1</field>
            <field name="end_session">100</field>
            <field name="first_pay_session">10</field>
            <field name="percentage_rate_session">1</field>
        </record>
        
        <record id="demo_bond_corp_1" model="stock.bond">
            <field name="symbol">CORP001</field>
            <field name="name">Corporate Bond ABC Inc</field>
            <field name="sector">Technology</field>
            <field name="bond_type">corporate</field>
            <field name="rate_type">step_up_coupon</field>
            <field name="status">trade</field>
            <field name="ipo_price">950</field>
            <field name="current_price">975</field>
            <field name="quantity">5000</field>
            <field name="compensation_rate">4.2</field>
            <field name="step_percentage">0.5</field>
