<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- IPO Status Wizard Form -->
    <record id="view_session_end_ipo_wizard_form" model="ir.ui.view">
        <field name="name">session.end.ipo.wizard.form</field>
        <field name="model">session.end.ipo.wizard</field>
        <field name="arch" type="xml">
            <form string="Manage IPO Securities at Session End">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="session_id" readonly="1"/>
                        </h1>
                        <p>Please decide the status for each IPO/PO security for the next session:</p>
                    </div>
                    <field name="line_ids" widget="one2many">
                        <list editable="bottom" create="false" delete="false">
                            <field name="security_id" invisible="1"/>
                            <field name="symbol" readonly="1"/>
                            <field name="security_name" readonly="1"/>
                            <field name="current_status" readonly="1"/>
                            <field name="new_status" required="1"/>
                            <field name="pending_orders_count" readonly="1"/>
                            <field name="total_pending_quantity" readonly="1"/>
                            <field name="ipo_price" required="new_status in ['trading', 'new_po']" readonly="new_status not in ['trading', 'new_po']"/>
                            <field name="new_po_quantity" required="new_status == 'new_po'" readonly="new_status != 'new_po'" invisible="new_status != 'new_po'"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button name="action_process" string="Process Changes" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- IPO Wizard Action -->
    <record id="action_session_end_ipo_wizard" model="ir.actions.act_window">
        <field name="name">Manage IPO Securities</field>
        <field name="res_model">session.end.ipo.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_session_end_ipo_wizard_form"/>
    </record>
</odoo>