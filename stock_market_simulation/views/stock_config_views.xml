<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_stock_config_form" model="ir.ui.view">
        <field name="name">stock.config.form</field>
        <field name="model">stock.config</field>
        <field name="arch" type="xml">
            <form string="Stock Market Configuration">
                <sheet>
                    <group>
                        <group string="Trading Configuration">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="settlement_days"/>
                            <field name="price_decimal_places"/>
                            <field name="min_order_value"/>
                            <field name="daily_trading_limit"/>
                            <field name="position_limit_percent"/>
                        </group>
                        <group string="Margin &amp; Loan Configuration">
                            <field name="margin_call_threshold"/>
                            <field name="margin_call_grace_period"/>
                            <field name="default_penalty_rate"/>
                            <field name="loan_default_days"/>
                        </group>
                    </group>
                    <group>
                        <group string="Interest Rates">
                            <field name="savings_interest_rate"/>
                            <field name="fixed_deposit_base_rate"/>
                        </group>
                        <group string="Price Movement">
                            <field name="price_update_threshold"/>
                            <field name="max_price_change_percent"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_stock_config_tree" model="ir.ui.view">
        <field name="name">stock.config.tree</field>
        <field name="model">stock.config</field>
        <field name="arch" type="xml">
            <list string="Stock Configurations">
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="settlement_days"/>
                <field name="margin_call_threshold"/>
                <field name="daily_trading_limit"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_stock_config" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="res_model">stock.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Stock Market Parameters
            </p>
            <p>
                Set up trading limits, interest rates, and other system parameters.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_stock_config"
        name="Configuration"
        parent="menu_stock_admin"
        action="action_stock_config"
        sequence="100"
        groups="group_stock_admin"/>
</odoo> 