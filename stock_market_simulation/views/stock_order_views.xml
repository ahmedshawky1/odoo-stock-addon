<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Order Form View -->
    <record id="view_stock_order_form" model="ir.ui.view">
        <field name="name">stock.order.form</field>
        <field name="model">stock.order</field>
        <field name="arch" type="xml">
            <form string="Stock Order">
                <header>
                    <button name="action_submit" type="object" string="Submit Order" 
                            invisible="status != 'draft'" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel Order" 
                            invisible="(status != 'pending') and (status != 'partial')" class="btn-warning"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,pending,partial,filled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_stock_trade)d" type="action" class="oe_stat_button" icon="fa-exchange"
                                context="{'search_default_buy_order_id': id, 'search_default_sell_order_id': id}">
                            <field name="filled_quantity" widget="statinfo" string="Filled"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="status != 'cancelled'"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" invisible="status != 'rejected'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Order Details">
                            <field name="user_id" options="{'no_create': True}" domain="[('share', '=', False), ('user_type', '=', 'investor')]"/>
                            <field name="session_id" options="{'no_create': True}" domain="[('state', '=', 'open')]"/>
                            <field name="security_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Order Parameters">
                            <field name="side" widget="radio_button"/>
                            <field name="order_type" widget="radio_button"/>
                            <field name="quantity"/>
                            <field name="price" invisible="order_type == 'market'" required="order_type == 'limit'"/>
                            <field name="order_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Execution Status">
                            <field name="filled_quantity"/>
                            <field name="remaining_quantity"/>
                            <field name="order_value"/>
                            <field name="filled_value"/>
                        </group>
                        <group string="Fees &amp; Commissions">
                            <field name="broker_commission_rate" widget="percentage" options="{'factor': 1.0}"/>
                            <field name="broker_commission"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Trades" name="trades">
                            <field name="trade_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="trade_date"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="value"/>
                                </list>
                            </field>
                        </page>
                        <page string="Additional Information" name="info">
                            <group>
                                <field name="description" readonly="1"/>
                                <field name="rejection_reason" readonly="1" invisible="status != 'rejected'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Order Tree View -->
    <record id="view_stock_order_tree" model="ir.ui.view">
        <field name="name">stock.order.tree</field>
        <field name="model">stock.order</field>
        <field name="arch" type="xml">
            <list string="Orders" create="true" decoration-success="status == 'filled'" decoration-warning="status == 'partial'" decoration-danger="status in ['cancelled', 'rejected']" default_order="session_id desc, create_date desc">
                <field name="name"/>
                <field name="order_date"/>
                <field name="user_id"/>
                <field name="security_id"/>
                <field name="side"/>
                <field name="order_type"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="filled_quantity"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    
    <!-- Order Book Tree View -->
    <record id="view_stock_order_book_tree" model="ir.ui.view">
        <field name="name">stock.order.book.tree</field>
        <field name="model">stock.order</field>
        <field name="arch" type="xml">
            <list string="Order Book" create="false" delete="false" decoration-info="side == 'buy'" decoration-warning="side == 'sell'">
                <field name="security_id"/>
                <field name="side"/>
                <field name="price"/>
                <field name="quantity"/>
                <field name="remaining_quantity"/>
                <field name="status"/>
                <field name="user_id"/>
                <field name="order_date"/>
            </list>
        </field>
    </record>
    
    <!-- Order Kanban View -->
    <record id="view_stock_order_kanban" model="ir.ui.view">
        <field name="name">stock.order.kanban</field>
        <field name="model">stock.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="user_id"/>
                <field name="security_id"/>
                <field name="side"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="status"/>
                <field name="order_value"/>
                <progressbar field="status" colors='{"filled": "success", "partial": "warning", "cancelled": "danger", "rejected": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="user_id"/> - <field name="security_id"/>
                                </div>
                                <div class="mt-2">
                                    <span t-attf-class="badge #{record.side.raw_value == 'buy' ? 'badge-info' : 'badge-warning'}">
                                        <field name="side"/>
                                    </span>
                                    <span class="ml-2">
                                        <field name="quantity"/> @ <field name="price"/>
                                    </span>
                                </div>
                                <div class="text-muted">
                                    Value: <field name="order_value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Order Search View -->
    <record id="view_stock_order_search" model="ir.ui.view">
        <field name="name">stock.order.search</field>
        <field name="model">stock.order</field>
        <field name="arch" type="xml">
            <search string="Orders">
                <field name="name"/>
                <field name="user_id"/>
                <field name="security_id"/>
                <filter string="My Orders" name="filter_my_orders" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Buy Orders" name="filter_buy" domain="[('side', '=', 'buy')]"/>
                <filter string="Sell Orders" name="filter_sell" domain="[('side', '=', 'sell')]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Pending" name="filter_pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Partial" name="filter_partial" domain="[('status', '=', 'partial')]"/>
                <filter string="Filled" name="filter_filled" domain="[('status', '=', 'filled')]"/>
                <filter string="Cancelled" name="filter_cancelled" domain="[('status', '=', 'cancelled')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Session" name="group_by_session" context="{'group_by': 'session_id'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Security" name="group_by_security" context="{'group_by': 'security_id'}"/>
                    <filter string="Side" name="group_by_side" context="{'group_by': 'side'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Order Date" name="group_by_date" context="{'group_by': 'order_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Order Action -->
    <record id="action_stock_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">stock.order</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_group_by_session': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Place a new order
            </p>
            <p>
                Create buy or sell orders for securities. Orders will be matched automatically based on price-time priority.
            </p>
        </field>
    </record>
    
    <!-- Order Book Action -->
    <record id="action_stock_order_book" model="ir.actions.act_window">
        <field name="name">Order Book</field>
        <field name="res_model">stock.order</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_stock_order_book_tree"/>
        <field name="domain">[('status', 'in', ['pending', 'partial'])]</field>
        <field name="context">{'search_default_group_by_security': 1, 'search_default_group_by_side': 1}</field>
    </record>
    
</odoo> 