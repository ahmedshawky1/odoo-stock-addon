<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Position Form View -->
    <record id="view_stock_position_form" model="ir.ui.view">
        <field name="name">stock.position.form</field>
        <field name="model">stock.position</field>
        <field name="arch" type="xml">
            <form string="Stock Position" create="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_trades" type="object" class="oe_stat_button" icon="fa-exchange">
                            <span>View Trades</span>
                        </button>
                        <button name="action_sell_position" type="object" class="oe_stat_button" icon="fa-money" 
                                invisible="available_quantity &lt;= 0">
                            <span>Sell Position</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Position Details">
                            <field name="user_id"/>
                            <field name="security_id"/>
                            <field name="quantity"/>
                            <field name="available_quantity"/>
                            <field name="blocked_quantity"/>
                        </group>
                        <group string="Valuation">
                            <field name="average_cost"/>
                            <field name="cost_basis"/>
                            <field name="market_value"/>
                            <field name="portfolio_weight" widget="percentage" options="{'factor': 1.0}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Performance">
                            <field name="unrealized_pnl" 
                                   decoration-success="unrealized_pnl > 0" 
                                   decoration-danger="unrealized_pnl &lt; 0"/>
                            <field name="unrealized_pnl_percent" widget="percentage" options="{'factor': 1.0}"
                                   decoration-success="unrealized_pnl_percent > 0" 
                                   decoration-danger="unrealized_pnl_percent &lt; 0"/>
                        </group>
                        <group string="Dates">
                            <field name="first_purchase_date"/>
                            <field name="last_transaction_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Position Tree View -->
    <record id="view_stock_position_tree" model="ir.ui.view">
        <field name="name">stock.position.tree</field>
        <field name="model">stock.position</field>
        <field name="arch" type="xml">
            <list string="Positions" create="false">
                <field name="user_id"/>
                <field name="security_id"/>
                <field name="quantity"/>
                <field name="available_quantity"/>
                <field name="average_cost"/>
                <field name="cost_basis"/>
                <field name="market_value"/>
                <field name="unrealized_pnl" 
                       decoration-success="unrealized_pnl > 0" 
                       decoration-danger="unrealized_pnl &lt; 0"/>
                <field name="unrealized_pnl_percent" widget="percentage" options="{'factor': 1.0}"
                       decoration-success="unrealized_pnl_percent > 0" 
                       decoration-danger="unrealized_pnl_percent &lt; 0"/>
                <field name="portfolio_weight" widget="percentage" options="{'factor': 1.0}"/>
            </list>
        </field>
    </record>
    
    <!-- Position Pivot View -->
    <record id="view_stock_position_pivot" model="ir.ui.view">
        <field name="name">stock.position.pivot</field>
        <field name="model">stock.position</field>
        <field name="arch" type="xml">
            <pivot string="Position Analysis">
                <field name="user_id" type="row"/>
                <field name="security_id" type="col"/>
                <field name="quantity" type="measure"/>
                <field name="market_value" type="measure"/>
                <field name="unrealized_pnl" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Position Search View -->
    <record id="view_stock_position_search" model="ir.ui.view">
        <field name="name">stock.position.search</field>
        <field name="model">stock.position</field>
        <field name="arch" type="xml">
            <search string="Positions">
                <field name="user_id"/>
                <field name="security_id"/>
                <filter string="My Positions" name="filter_my_positions" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Security" name="group_by_security" context="{'group_by': 'security_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Position Action -->
    <record id="action_stock_position" model="ir.actions.act_window">
        <field name="name">Positions</field>
        <field name="res_model">stock.position</field>
        <field name="view_mode">list,form,pivot</field>
        <field name="context">{'search_default_filter_my_positions': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No positions yet
            </p>
            <p>
                Positions show your current holdings of each security. They are created automatically when you buy securities.
            </p>
        </field>
    </record>
    
</odoo> 