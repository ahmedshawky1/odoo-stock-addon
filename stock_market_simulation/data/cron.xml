<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_stock_matching_engine" model="ir.cron">
            <field name="name">Stock Matching Engine (Every Minute)</field>
            <field name="model_id" ref="stock_market_simulation.model_stock_matching_engine"/>
            <field name="state">code</field>
            <field name="code">env['stock.matching.engine'].cron_run_matching()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <record id="ir_cron_expire_user_blocks" model="ir.cron">
            <field name="name">Expire User Blocks (Every 5 Minutes)</field>
            <field name="model_id" ref="stock_market_simulation.model_stock_user_block"/>
            <field name="state">code</field>
            <field name="code">env['stock.user.block'].cron_expire_blocks()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <record id="ir_cron_update_news_status" model="ir.cron">
            <field name="name">Update News Status (Every 10 Minutes)</field>
            <field name="model_id" ref="stock_market_simulation.model_stock_news"/>
            <field name="state">code</field>
            <field name="code">env['stock.news'].cron_update_news_status()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
            <!-- One-time seeding cron: seeds cash from initial capital, then disables itself -->
            <record id="ir_cron_seed_investor_cash_once" model="ir.cron">
                <field name="name">Seed Investor Cash (One-Time)</field>
                <field name="model_id" ref="base.model_res_users"/>
                <field name="state">code</field>
                <field name="code">env['res.users'].cron_backfill_cash_from_initial()</field>
                <field name="interval_number">1</field>
                <field name="interval_type">days</field>
                <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                <field name="active">True</field>
                <field name="user_id" ref="base.user_admin"/>
            </record>

    </data>
</odoo>