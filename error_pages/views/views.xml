    <!-- General HTTP Error Handler -->
    <template id="http_routing_extend" inherit_id="http_routing.http_error" name="Http Error">
        <xpath expr="//t[@t-call='web.frontend_layout']" position="replace">
            <html>
                <head>
                    <meta charset="utf-8"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1"/>
                    <title>Error</title>
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
                    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
                    <link rel="stylesheet" type="text/css" href="/skan/static/src/css/portal_test.css"/>
                </head>
                <body>
                    <div class="portal-wrapper">
                        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom sticky-top">
                            <div class="container">
                                <a class="navbar-brand d-flex align-items-center" href="/stock-portal">
                                    <span class="fw-bold text-dark">Stock Market Simulation</span>
                                </a>
                            </div>
                        </nav>
                        <main class="main-content py-5">
                            <div class="container text-center">
                                <div class="error-icon mb-4">
                                    <i class="fa fa-exclamation-triangle" style="font-size: 6rem; color: #dc3545;"></i>
                                </div>
                                <h1 class="display-1 fw-bold mb-3"><t t-esc="status_code or 'Error'"/></h1>
                                <h2 class="mb-4"><t t-esc="status_message or 'An Error Occurred'"/></h2>
                                <p class="lead mb-5">Sorry, an error occurred while processing your request. Please try again or contact technical support.</p>
                                <div>
                                    <a href="/stock-portal" class="btn btn-primary btn-lg me-2">
                                        <i class="fa fa-home"></i> Go Home
